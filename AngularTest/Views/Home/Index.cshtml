@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="Make">Make</label>
                <input class="form-control" type="text" ng-model="newCarInfo.Make"/>
            </div>
            <div class="form-group">
                <label for="Model">Model</label>
                <input class="form-control" type="text" ng-model="newCarInfo.Model"/>
            </div>
            <div class="form-group">
                <label for="Year">Year</label>
                <input class="form-control" type="text" ng-model="newCarInfo.Year"/>
            </div>
            <div class="form-group">
                <label for="Color">Color</label>
                <input class="form-control" type="text" ng-model="newCarInfo.Color"/>
            </div>
            <button type="button" ng-click="saveNewCar()">Save. Damn Straight.</button>
        </form>
    </div>
    <div class="col-md-6">
        <ul class="list-unstyled">
            <li ng-repeat="car in cars">
                {{car.Year}}  {{ car.Make}} {{ car.Model}}- Color: {{car.Color}}
            </li>
        </ul>
    </div>
</div>